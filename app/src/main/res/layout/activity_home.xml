<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.raoqian.mobprosaleapplication.CustomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="180dp"-->
            <!--android:src="@mipmap/img" />-->
            <com.raoqian.rollpagerviewsupport.rollviewpager.RollPagerView
                android:id="@+id/image_show_roll"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:content_autoPlay="false"
                app:selected_dot_res="@drawable/selector_main_image_dot" />

            <ImageView
                android:id="@+id/gif"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <!--<pl.droidsonroids.gif.GifImageView-->
            <!--android:id="@+id/gif"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="100dp"-->
            <!--android:src="@drawable/gggif" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/click1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/click2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配2"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/click3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配3"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/click4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配4"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/show22"
                    android:gravity="center_horizontal"
                    android:text="内配"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="800dp"
                android:text="bottom" />
        </LinearLayout>

    </com.raoqian.mobprosaleapplication.CustomScrollView>

    <LinearLayout
        android:id="@+id/inputPart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@null"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        tools:background="#aaa">

        <ImageView
            android:id="@+id/menu_top"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_menu_black_24dp" />


        <EditText
            android:id="@+id/input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/input_stock_white"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:hint="@string/text_search"
            android:paddingLeft="6dp"
            android:textColorHint="#333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/text_login"
            android:textColor="@android:color/black" />
    </LinearLayout>
</FrameLayout>
